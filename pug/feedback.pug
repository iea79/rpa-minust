    - pageName = "Обратная связь";
block content
    // begin chat
    .chat
        .chat__head Чат с администрацией
        .chat__content
            #chat-scroll-container
                .chat__body.scrollbar
                    .chat__row
                        .chat__answer
                            .chat__ava
                                img(src="img/logo-dark.png", alt="")
                            .chat__wrap
                                .chat__date Администрация, 21 апреля в 11:12
