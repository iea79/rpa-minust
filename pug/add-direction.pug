extends layout/layout.pug
block variables
    - pageNum = 2;
    - pageName = "Выбор направления подготовки";
block content
    // begin notification
    .notification
        i.icon_alert 
        .notification__text Просьба ознакомиться с 
            a(href="") Руководством пользователя 
            | и 
            a(href="") Видеоинструкцией по работе с порталом 
            | перед началом заполнения данных

        .notification__action
            button.btn.btn_contrast Закрыть уведомление

    // end notification

    .form__legend Заявление
    .form__text При поступлении на Аспирантуру или Магистратуру необходимо расставить выбранные направления по приоритету в порядке убывания приоритета (сверху-вниз), с помощью перетаскивания за шильдик, расположенный с правой стороны на каждом из выбранных направлений.

    .form
        .form__check.form__check_row ВГУЮ (РПА Минюуста России). 40.04.01 40.04.01 Юриспруденция Заочная Бюджетная основа

        .choice__props.choice__props_short
            .choice__prop Направление: 
                b Бакалавр
            .choice__prop Филиал: 
                b ВГУЮ (РПА МинЮста России)
            .choice__prop Форма обучения: 
                b Заочная
            .choice__prop Источник финансирования: 
                b Полное возмещение затрат


        .form__row
            .form__item.form__item_semy
                .form__sub Форма сдачи экзаменов
                .form__row
                    .form__item.form__item_semy_lg
                        .form__label История
                        +select()
                    .form__item.form__item_middle
                        .form__info Балл 0
                .form__row
                    .form__item.form__item_semy_lg
                        .form__label Обществознание
                        +select()
                    .form__item.form__item_middle
                        .form__info Балл 0
                .form__row
                    .form__item.form__item_semy_lg
                        .form__label Русский язык
                        +select()
                    .form__item.form__item_middle
                        .form__info Балл 0

            .form__item.form__item_semy
                .form__sub Форма сдачи экзаменов
                .form__row
                    .form__item.form__item_full
                        .form__label Наименование организации
                        +input("Наименование организации заключившей с Вами договор о целевом обучении")

                        .form__list
                            ul
                                li Полное наименование:
                                li ОГРН:
                                li ИНН:
                                li КПП:
                                li Руководитель:
                                li Адрес:
                .form__row
                    .form__item.form__item_semy_lg
                        .form__label Копия договора о целевом обучении
                        +file()

        .form__add
            .form__addIcon
            .form__addLabel Добавить предмет
